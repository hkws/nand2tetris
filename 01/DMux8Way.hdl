/**
 * 8-way demultiplexor:
 * {a, b, c, d, e, f, g, h} = {in, 0, 0, 0, 0, 0, 0, 0} if sel == 000
 *                            {0, in, 0, 0, 0, 0, 0, 0} if sel == 001
 *                            etc.
 *                            {0, 0, 0, 0, 0, 0, 0, in} if sel == 111
 */

CHIP DMux8Way {
    IN in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    DMux4Way(in=in, sel[1]=sel[2], sel[0]=sel[1], a=dmux1a, b=dmux1b, c=dmux1c, d=dmux1d);
    DMux(in=dmux1a, sel=sel[0], a=a, b=b);
    DMux(in=dmux1b, sel=sel[0], a=c, b=d);
    DMux(in=dmux1c, sel=sel[0], a=e, b=f);
    DMux(in=dmux1d, sel=sel[0], a=g, b=h);
}